<!--miniprogram/pages/my/index.wxml-->

<view style="position: relative;" style="width: 750rpx;height:400rpx;color:#fff;">
  <image class="header" src="/images/my/header.png" style="width:750rpx;" mode="widthFix"></image>
  <view class="user-info">
    <open-data class="avatar" type="userAvatarUrl"></open-data>
    <open-data class="nickname" type="userNickName"></open-data>
  </view>
</view>

<view style="width:100%;margin-top: -80rpx;">
  <view class="flex-row-center" style="margin:auto;background-color:white;width:700rpx;height:150rpx;border-radius:10rpx;">

    <navigator url="/pages/my/record?navigationIndex=0" hover-class="button-hover left" hover-stay-time="100" class="flex-column-center" style="flex:1;height:100%;">
      <view class="bold" style="color: #333;font-size: 38rpx;">{{ total1 }}</view>
      <view class="padding-top-6rpx" style="color: #888;font-size: 30rpx;">中奖记录</view>
    </navigator>

    <navigator url="/pages/my/record?navigationIndex=1" hover-class="button-hover" hover-stay-time="100" class="flex-column-center" style="flex:1;height:100%;">
      <view class="bold" style="color: #333;font-size: 38rpx;">{{ total2 }}</view>
      <view class="padding-top-6rpx" style="color: #888;font-size: 30rpx;">待开奖</view>
    </navigator>

    <navigator url="/pages/my/record?navigationIndex=2" hover-class="button-hover right" hover-stay-time="100" class="flex-column-center" style="flex:1;height:100%;">
      <view class="bold" style="color: #333;font-size: 38rpx;">{{ total3 }}</view>
      <view class="padding-top-6rpx" style="color: #888;font-size: 30rpx;">所有抽奖</view>
    </navigator>

  </view>
</view>

<view style="width:100%;margin-top: 15rpx;">
  <view style="margin:auto;background-color:white;width:700rpx;">

    <button open-type="contact" hover-class="button-hover" hover-start-time="0" hover-stay-time="100">
      <view class="flex-row-left padding-30rpx">
        <view class="is-font icon-service" style="font-size:40rpx;color:#4a4a4a;"></view>
        <text style="padding-left: 12rpx;font-size:32rpx;">在线客服</text>
      </view>
    </button>

    <button open-type="feedback" hover-class="button-hover" hover-start-time="0" hover-stay-time="100">
      <view class="flex-row-left padding-30rpx">
        <view class="is-font icon-comment" style="font-size:40rpx;color:#4a4a4a;"></view>
        <text style="padding-left: 12rpx;font-size:32rpx;">意见反馈</text>
      </view>
    </button>

    <navigator url="/pages/question/index" hover-class="button-hover" hover-start-time="0" hover-stay-time="100">
      <view class="flex-row-left padding-30rpx" style="color: #000;">
        <view class="is-font icon-question" style="font-size:40rpx;color:#4a4a4a;"></view>
        <text style="padding-left: 12rpx;font-size:32rpx;">抽奖规则</text>
      </view>
    </navigator> 

  </view>
</view>

<view style="position: fixed;bottom: 15rpx;width: 100%;">
  <view style="color: #aaa;font-size: 30rpx;text-align: center;">美丽就在眼前，相信美好！</view>
</view>