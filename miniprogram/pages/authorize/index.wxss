/* miniprogram/pages/login/index.wxss */

page {
  background: #fff;
  font-size: 32rpx;
}

.container {
  padding: 0 60rpx;
}

.user-info {
  padding: 80rpx 0 48rpx;
  border-bottom: 1rpx solid #e3e3e3;
  margin-bottom: 72rpx;
  text-align: center;
}

.user-info .header {
  width: 190rpx;
  height: 190rpx;
  border: 2px solid #fff;
  margin: 0rpx auto 0;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 1px 0px 5px rgba(50, 50, 50, 0.3);
}

.authorize-title {
  color: #333;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}

.authorize-subtitle {
  color: #888;
  margin-bottom: 88rpx;
  font-size: 30rpx;
}

.authorize-button {
  height: 88rpx;
  line-height: 88rpx;
  background: #ff4804;
  color: #fff;
  font-size: 30rpx;
  border-radius: 999rpx;
  text-align: center;
}
