/* is-framework/components/is-loading.wxss */

@keyframes grids-loading {
  0% {
    transform: scaleY(1);
  }

  50% {
    transform: scaleY(0.4);
  }

  100% {
    transform: scaleY(1);
  }
}

.grids-loading {
  height: 60rpx;
}

.grids-loading .item {
  display: inline-block;
  width: 9rpx;
  height: 60rpx;
  border-radius: 5rpx;
  background: #ff4804;
  margin: 0 8rpx;
}

.grids-loading .item:nth-child(1) {
  animation: grids-loading 0.7s ease-in 0s infinite;
}

.grids-loading .item:nth-child(2) {
  animation: grids-loading 0.7s ease-in 0.1s infinite;
}

.grids-loading .item:nth-child(3) {
  animation: grids-loading 0.7s ease-in 0.2s infinite;
}

.grids-loading .item:nth-child(4) {
  animation: grids-loading 0.7s ease-in 0.3s infinite;
}

.grids-loading .item:nth-child(5) {
  animation: grids-loading 0.7s ease-in 0.4s infinite;
}

@keyframes circle-loading {
  50% {
    transform: scale(0.4);
    opacity: 0.4;
  }

  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.circle-loading {
  position: relative;
  width: 30rpx;
}

.circle-loading .item {
  display: block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: #333;
  position: absolute;
}

.circle-loading .item:nth-child(1) {
  top: 50rpx;
  left: 0;
  animation: circle-loading 1s ease 0s infinite;
}

.circle-loading .item:nth-child(2) {
  top: 34rpx;
  left: 34rpx;
  animation: circle-loading 1s ease -0.12s infinite;
}

.circle-loading .item:nth-child(3) {
  top: 0px;
  left: 50rpx;
  animation: circle-loading 1s ease -0.24s infinite;
}

.circle-loading .item:nth-child(4) {
  top: -34rpx;
  left: 34rpx;
  animation: circle-loading 1s ease -0.36s infinite;
}

.circle-loading .item:nth-child(5) {
  top: -50rpx;
  left: 0;
  animation: circle-loading 1s ease -0.48s infinite;
}

.circle-loading .item:nth-child(6) {
  top: -34rpx;
  left: -34rpx;
  animation: circle-loading 1s ease -0.6s infinite;
}

.circle-loading .item:nth-child(7) {
  top: 0px;
  left: -50rpx;
  animation: circle-loading 1s ease -0.72s infinite;
}

.circle-loading .item:nth-child(8) {
  top: 34rpx;
  left: -34rpx;
  animation: circle-loading 1s ease -0.84s infinite;
}
